{
  "rootDir": "../",
  "verbose": true,
  "testPathIgnorePatterns": [
    "<rootDir>/dist/",
    "<rootDir>/lib/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "<rootDir>/config/preprocessor.js"
  },
  "testMatch": [
    "**/__tests__/*.(ts|tsx)"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/config/tests/test-setup.ts",
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
      "<rootDir>/config/tests/__mocks__/fileMock.ts",
    "\\.(css)$": "<rootDir>/config/tests/__mocks__/styleMock.ts"
  }
}